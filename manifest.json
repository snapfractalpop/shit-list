{
  "manifest_version": 2,

  "name": "Shit List",
  "description": "A shit list for the web.",
  "version": "0.0.7",

  "browser_action": {
    "default_icon": {
      "16": "images/poop-inactive19.png",
      "19": "images/poop-inactive19.png",
      "32": "images/poop-inactive38.png",
      "38": "images/poop-inactive38.png",
      "48": "images/poop-inactive38.png",
      "64": "images/poop-inactive38.png",
      "128": "images/poop-inactive38.png"
    },
    "default_title": "Add this site to your shit list."
  },
  "background": {
    "scripts": [
      "js/backgroundBundle.min.js"
    ]
  },
  "content_scripts" : [
    {
      "matches" : [ "http://*/*", "https://*/*" ],
      "css" : [
        "css/shitList.css"
      ],
      "js" : [
        "js/libs/jquery-1.11.1.min.js",
        "js/contentScriptBundle.min.js"
      ],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "storage"
  ],
  "web_accessible_resources": [
    "images/poop64.png"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
