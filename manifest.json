{
  "manifest_version": 2,

  "name": "Shit List",
  "description": "A shit list for the web.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "poop.png",
    "default_popup": "popup.html"
  },
  "content_scripts" : [
    {
      "matches" : [ "http://*/*", "https://*/*" ],
      "css" : [
        "css/shitList.css"
      ],
      "js" : [
        "js/jquery-1.11.1.min.js",
        "js/shitList.js"
      ],
      "run_at" : "document_end",
      "all_frames" : false
    }
  ],
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "web_accessible_resources": [
    "poop.png"
  ]
}
